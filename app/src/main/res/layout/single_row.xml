<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/shopname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="108dp"
        android:text="TextView"
        android:textColor="#222222"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shopcount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="53dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/timing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cost2"
        android:layout_below="@+id/cost2"
        android:text="TextView"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="168dp"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:focusableInTouchMode="false"
        android:numStars="5" />

    <TextView
        android:id="@+id/cost2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/shopcount2"
        android:layout_marginEnd="30dp"
        android:text="TextView"
        android:textSize="24sp" />

    <Button
        android:id="@+id/viewlist"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/timing2"
        android:background="@drawable/shape"
        android:paddingBottom="20dp"
        android:text="View Items"
        android:textAllCaps="false"
        android:textColor="#4ca448"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/location"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#4ca448"
        android:text="Get Directions"
        android:paddingTop="20dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:background="@drawable/shape"
        android:textColor="#4ca448"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="CALL" />
</RelativeLayout>