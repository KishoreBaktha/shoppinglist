<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/shopname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/location"
        android:layout_alignTop="@+id/imageView"
        android:text="TextView"
        android:textColor="#222222"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shopcount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cost2"
        android:layout_alignStart="@+id/shopname2"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/shopname2"
        android:text="TextView"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="182dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="184dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/shopname2"
        android:layout_below="@+id/shopname2"
        android:focusableInTouchMode="false"
        android:isIndicator="true"
        android:max="5"
        android:progressTint="#f47608"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    <TextView
        android:id="@+id/cost2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timing2"
        android:layout_alignStart="@+id/shopname2"
        android:text="TextView"
        android:textSize="20sp" />

    <Button
        android:id="@+id/viewlist"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="195dp"
        android:background="@drawable/shape"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="View Items"
        android:textAllCaps="false"
        android:textColor="#4ca448"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/location"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignTop="@+id/viewlist"
        android:background="#4ca448"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Get Directions"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/shopname2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_call" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="264dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>